{{#if addNewAnswer}}
<h1>Add Your Answer</h1>
    <div>
      <form>

        <div class="form-group">
          <label for="name">Your Name</label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="explanation">Your Answer</label>
          {{input value=explanation id="explanation"}}
        </div>

        <button {{action 'saveAnswer'}}>Save</button>
      </form>
    </div>
{{else}}
<button {{action 'newAnswerForm'}}>Add Your Answer</button>
{{/if}}
