{{#if addNewQuestion}}
<h1>I have a question</h1>
<div>
  <form>

    <div class="form-group">
      <label for="name">You Name</label>
      {{input value=name id="name"}}
    </div>

    <div class="form-group">
      <label for="question">You Question</label>
      {{input value=question id="question"}}
    </div>

    <div class="form-group">
      <label for="notes">Further Explanation</label>
      {{input value=notes id="notes"}}
    </div>

    <button {{action 'save'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'questionForm'}}>I have a question</button>
{{/if}}
